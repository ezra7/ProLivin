<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.ezraaigbe7gmail.prolivin.ExplorePage"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="1000dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:adjustViewBounds="true"

            android:cropToPadding="true"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:scaleType="centerInside"
            android:scaleX="0.9"
            android:scaleY="0.9"
            app:srcCompat="@drawable/logonoframe" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/listView"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="15dp" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="@dimen/activity_vertical_margin">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="125dp"
                android:layout_height="82dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"

                android:layout_marginBottom="2dp"
                android:layout_marginLeft="0dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:cropToPadding="false"
                android:minHeight="200dp"
                android:minWidth="55dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imageButton2"
                app:layout_optimizationLevel="all"
                app:srcCompat="@drawable/plscore"
                tools:layout_editor_absoluteX="265dp"
                tools:layout_editor_absoluteY="575dp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="130dp"
                android:layout_height="86dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"

                android:layout_marginBottom="0dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:cropToPadding="false"
                android:minHeight="200dp"
                android:minWidth="55dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_editor_absoluteX="0dp"
                app:layout_editor_absoluteY="0dp"
                app:layout_optimizationLevel="all"
                app:srcCompat="@drawable/search"
                tools:layout_editor_absoluteX="0dp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="150dp"
                android:layout_height="89dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"

                android:layout_marginBottom="3dp"
                android:layout_marginLeft="0dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:cropToPadding="false"
                android:minHeight="200dp"
                android:minWidth="55dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imageButton3"
                app:layout_optimizationLevel="all"
                app:srcCompat="@drawable/subscriptions"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="567dp" />

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

</LinearLayout>
