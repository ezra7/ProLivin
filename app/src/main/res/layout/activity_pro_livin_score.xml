<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezraaigbe7gmail.prolivin.ProLivinScore">

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"

        android:adjustViewBounds="true"
        android:clickable="true"
        android:cropToPadding="false"
        android:minHeight="200dp"
        android:minWidth="55dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        app:layout_optimizationLevel="all"
        app:srcCompat="@drawable/search"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:scaleType="centerInside"
        android:scaleX="0.9"
        android:scaleY="0.9"
        app:srcCompat="@drawable/logonoframe"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="-116dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"

        android:layout_marginBottom="3dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:cropToPadding="false"
        android:minHeight="200dp"
        android:minWidth="55dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageButton3"
        app:layout_optimizationLevel="all"
        app:srcCompat="@drawable/subscriptions" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"

        android:layout_marginBottom="2dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:cropToPadding="false"
        android:minHeight="200dp"
        android:minWidth="55dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageButton2"
        app:layout_optimizationLevel="all"
        app:srcCompat="@drawable/plscore" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pro Score"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="66dp" />

</android.support.constraint.ConstraintLayout>
